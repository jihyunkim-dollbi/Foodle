<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.mapper.main-mapper">
	<select id="weeklyTop30" resultType="MainInfoVO">	
		SELECT rNO,rName,rScore,rAddr2,rTel
		FROM mainInfo
		WHERE ROWNUM&lt;=10
		ORDER BY rNO ASC
		<!-- RNO            NUMBER         
			RNAME          VARCHAR2(1000) 
			RTYPE          VARCHAR2(1000) 
			RTEL           VARCHAR2(1000) 
			RSCORE         NUMBER         
			RSCORECOUNT    NUMBER         
			RADDR1         VARCHAR2(1000) 
			RADDR2         VARCHAR2(1000) 
			RPWD           VARCHAR2(1000) 
			RAREA          VARCHAR2(1000) 
			RAREADETAIL    VARCHAR2(1000)  -->
	</select>
	<select id="weeklyTop30img" resultType="ImageVO">
		SELECT no,link
		FROM image
		WHERE ROWNUM&lt;=10
		ORDER BY rNO ASC
	</select>
	
</mapper>