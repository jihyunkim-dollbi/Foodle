<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.mapper.member-mapper">
	
	<!-- [회원가입] -->
	<!-- 들어가는 "순서" 맞춰줘야..
	[member 테이블]
	USERID  NOT NULL VARCHAR2(50)  
	UPWD    NOT NULL VARCHAR2(20)  
	UNAME   NOT NULL VARCHAR2(30)  
	UEMAIL  NOT NULL VARCHAR2(40)  
	UTEL             VARCHAR2(15)  
	UPHONE           VARCHAR2(15)  
	UPOST            VARCHAR2(7)   
	UADDR1           VARCHAR2(200) 
	UADDR2           VARCHAR2(200) 
	UGENDER          VARCHAR2(10)  
	UBIRTH           VARCHAR2(10)  
	UTYPE   NOT NULL VARCHAR2(10)  
	HINT    NOT NULL VARCHAR2(100) 
	HINTANS NOT NULL VARCHAR2(100) 
	 -->
	<insert id="memberInsert">
		INSERT INTO member VALUES(
		#{userid},#{upwd},#{uname},#{uemail},#{utel},
		#{uphone},#{upost},#{uaddr1},#{uaddr2},#{ugender},
		#{ubirth},#{utype},#{hint},#{hintans}
		)
	</insert>
	
	
	<!--[로그인] - ID/PWD 맞는지 확인 -->
	<select id="idCount" resultType="int" parameterType="String">
		SELECT COUNT(*) FROM member
		WHERE userId=#{id}
	</select>
	<select id="getPwd" resultType="MemberVO" parameterType="string">
		SELECT uPwd,uName,uType FROM member
		WHERE userId=#{id} 
	</select>
	
</mapper>